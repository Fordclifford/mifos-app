<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/Mifos.DesignSystem.Spacing.screenHorizontalMargin"
    android:layout_marginVertical="@dimen/Mifos.DesignSystem.Spacing.screenVerticalMargin"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/id_front"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:background="@color/gray_light"
        android:contentDescription="@string/uploadDescription" />


    <Button
        android:id="@+id/id_front_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:backgroundTint="@android:color/darker_gray"
        android:fillColor="#D9D9D9"
        android:text="@string/choose_file"
        android:textAppearance="@style/choose_file"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/id_back"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@color/gray_light"
        android:contentDescription="@string/upload_id_back" />


    <Button
        android:id="@+id/choose_id_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:text="@string/choose_file"
        android:textAppearance="@style/choose_file"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/next_of_kin_id_upload"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/next" />
    </LinearLayout>

</LinearLayout>
